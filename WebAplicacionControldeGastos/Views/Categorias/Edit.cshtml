@model WebAplicacionControldeGastos.Models.Categorias

@{
    ViewBag.Title = "Editar Categoría";
}

<div class="container" style="margin-top: 20px;">
    <div class="border-bottom pb-3 mb-4">
        <h2 class="mb-0" style="color: #1a1a1a; font-weight: 300;">Editar Categoría</h2>
        <small class="text-muted">Modifica el nombre de esta clasificación</small>
    </div>

    <div class="card shadow-sm border-0" style="max-width: 600px;">
        <div class="card-body p-4">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.Id)

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary" style="font-size: 0.9rem;">Nombre de la Categoría</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-flex gap-3 pt-2">
                        <input type="submit" value="Guardar Cambios" class="btn btn-dark px-4" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}