@{
    ViewBag.Title = "Inicio";
}

<style>
    /* Efecto de elevación al pasar el mouse */
    .dashboard-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.08) !important;
            border-color: transparent;
        }

    /* Estilo para los contenedores de los íconos (círculos de color) */
    .icon-box {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px auto; /* Centrado horizontal y margen abajo */
    }

        /* Tamaño de las ilustraciones SVG */
        .icon-box svg {
            width: 40px;
            height: 40px;
        }
</style>

<div class="container" style="margin-top: 60px; margin-bottom: 80px;">

    <div class="row mb-5 text-center">
        <div class="col-lg-8 offset-lg-2">
            <h1 style="color: #1a1a1a; font-weight: 700; font-size: 3rem; letter-spacing: -1px; margin-bottom: 20px;">
                Control Financiero Inteligente
            </h1>
            <p style="color: #6c757d; font-size: 1.25rem; font-weight: 300; line-height: 1.6;">
                Toma el control de tu dinero con una herramienta simple y poderosa. <br>Registra, organiza y visualiza tus finanzas en un solo lugar.
            </p>
        </div>
    </div>

    <div class="row justify-content-center g-4">

        <div class="col-md-4">
            <div class="card dashboard-card shadow-sm h-100 text-center bg-white rounded-4">
                <div class="card-body p-5">
                    <div class="icon-box" style="background-color: #e3f2fd; color: #2196f3;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cash-stack" viewBox="0 0 16 16">
                            <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                            <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z" />
                        </svg>
                    </div>
                    <h4 style="color: #1a1a1a; font-weight: 600; margin-bottom: 15px;">Registrar Gasto</h4>
                    <p style="color: #6c757d; margin-bottom: 30px;">
                        Añade rápidamente un nuevo movimiento a tu historial financiero.
                    </p>
                    @Html.ActionLink("Comenzar", "Create", "Gastos", null, new { @class = "btn btn-dark w-100 py-3 rounded-pill fw-bold", style = "letter-spacing: 0.5px;" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card shadow-sm h-100 text-center bg-white rounded-4">
                <div class="card-body p-5">
                    <div class="icon-box" style="background-color: #f3e5f5; color: #9c27b0;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-bar-chart-fill" viewBox="0 0 16 16">
                            <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2z" />
                        </svg>
                    </div>
                    <h4 style="color: #1a1a1a; font-weight: 600; margin-bottom: 15px;">Ver Mi Historial</h4>
                    <p style="color: #6c757d; margin-bottom: 30px;">
                        Analiza tus gastos pasados y visualiza tus estadísticas en gráficas.
                    </p>
                    @Html.ActionLink("Explorar", "Index", "Gastos", null, new { @class = "btn btn-outline-dark w-100 py-3 rounded-pill fw-bold", style = "letter-spacing: 0.5px;" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card shadow-sm h-100 text-center bg-white rounded-4">
                <div class="card-body p-5">
                    <div class="icon-box" style="background-color: #e0f2f1; color: #009688;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                            <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                            <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.095-.095-.353-.354-7.002-7.002-1.154-1.153z" />
                        </svg>
                    </div>
                    <h4 style="color: #1a1a1a; font-weight: 600; margin-bottom: 15px;">Organizar Categorías</h4>
                    <p style="color: #6c757d; margin-bottom: 30px;">
                        Personaliza cómo clasificas tus egresos para un mejor orden.
                    </p>
                    @Html.ActionLink("Configurar", "Index", "Categorias", null, new { @class = "btn btn-outline-secondary w-100 py-3 rounded-pill fw-bold", style = "letter-spacing: 0.5px;" })
                </div>
            </div>
        </div>

    </div>
</div>