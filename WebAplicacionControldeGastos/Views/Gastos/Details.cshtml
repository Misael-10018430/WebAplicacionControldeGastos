@model WebAplicacionControldeGastos.Models.Gastos

@{
    ViewBag.Title = "Detalles del Gasto";
}

<div class="container" style="margin-top: 20px;">
    <div class="border-bottom pb-3 mb-4">
        <h2 class="mb-0" style="color: #1a1a1a; font-weight: 300;">Detalles del Gasto</h2>
        <small class="text-muted">Información específica de este movimiento</small>
    </div>

    <div class="card shadow-sm border-0" style="max-width: 600px;">
        <div class="card-body p-4">

            <dl class="row mb-0">
                <dt class="col-sm-4 text-secondary mb-3" style="font-weight: 600; font-size: 0.95rem;">
                    Fecha de Registro
                </dt>
                <dd class="col-sm-8 mb-3" style="font-size: 1.1rem; color: #333;">
                    @Model.FechaRegistro.ToShortDateString()
                </dd>

                <dt class="col-sm-4 text-secondary mb-3" style="font-weight: 600; font-size: 0.95rem;">
                    Concepto
                </dt>
                <dd class="col-sm-8 mb-3" style="font-size: 1.1rem; color: #333;">
                    @Html.DisplayFor(model => model.Concepto)
                </dd>

                <dt class="col-sm-4 text-secondary mb-3" style="font-weight: 600; font-size: 0.95rem;">
                    Categoría
                </dt>
                <dd class="col-sm-8 mb-3" style="font-size: 1.1rem; color: #333;">
                    @Html.DisplayFor(model => model.Categorias.Nombre)
                </dd>

                <dt class="col-sm-4 text-secondary mb-3" style="font-weight: 600; font-size: 0.95rem;">
                    Monto Total
                </dt>
                <dd class="col-sm-8 mb-3" style="font-size: 1.1rem; color: #1a1a1a; font-weight: 600;">
                    $@Model.Monto.ToString("0.00")
                </dd>
            </dl>

        </div>

        <div class="card-footer bg-white border-top-0 p-4 pt-0 d-flex gap-3">
            @Html.ActionLink("Editar Gasto", "Edit", new { id = Model.Id }, new { @class = "btn btn-dark px-4" })
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
        </div>
    </div>
</div>