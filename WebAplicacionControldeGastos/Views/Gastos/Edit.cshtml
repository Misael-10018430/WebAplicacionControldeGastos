@model WebAplicacionControldeGastos.Models.Gastos

@{
    ViewBag.Title = "Editar Gasto";
}

<div class="container" style="margin-top: 20px;">
    <div class="border-bottom pb-3 mb-4">
        <h2 class="mb-0" style="color: #1a1a1a; font-weight: 300;">Editar Gasto</h2>
        <small class="text-muted">Modifica los detalles de este movimiento financiero</small>
    </div>

    <div class="card shadow-sm border-0" style="max-width: 700px;">
        <div class="card-body p-4">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.Id)

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary" style="font-size: 0.9rem;">Fecha del Gasto</label>
                        @Html.TextBoxFor(model => model.FechaRegistro, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", type = "date" })
                        @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary" style="font-size: 0.9rem;">Concepto (Descripción)</label>
                        @Html.EditorFor(model => model.Concepto, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                        @Html.ValidationMessageFor(model => model.Concepto, "", new { @class = "text-danger small" })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold text-secondary" style="font-size: 0.9rem;">Categoría</label>
                            @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-select form-control-lg" })
                            @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold text-secondary" style="font-size: 0.9rem;">Monto</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #f8f9fa;">$</span>
                                @Html.TextBoxFor(model => model.Monto, "{0:0.00}", new { @class = "form-control form-control-lg", type = "number", step = "0.01" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="d-flex gap-3 pt-2 mt-2 border-top pt-4">
                        <input type="submit" value="Guardar Cambios" class="btn btn-dark px-4" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}