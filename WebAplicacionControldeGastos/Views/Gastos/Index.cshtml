@model IEnumerable<WebAplicacionControldeGastos.Models.Gastos>

@{
    ViewBag.Title = "Registro de Gastos";

    // 1. Lógica interna: Agrupamos los gastos por categoría y sumamos los montos
    var resumenCategorias = Model
        .GroupBy(g => g.Categorias != null ? g.Categorias.Nombre : "Sin Categoría")
        .Select(g => new { Categoria = g.Key, Total = g.Sum(x => x.Monto) })
        .ToList();

    // 2. Convertimos los datos a un formato que la gráfica pueda entender (JSON)
    var labelsJson = Html.Raw(Json.Encode(resumenCategorias.Select(c => c.Categoria)));
    var dataJson = Html.Raw(Json.Encode(resumenCategorias.Select(c => c.Total)));
}

<div class="container" style="margin-top: 20px;">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
        <div>
            <h2 class="mb-0" style="color: #1a1a1a; font-weight: 300;">Mis Gastos</h2>
            <small class="text-muted">Historial y control visual de tus movimientos</small>
        </div>
        @Html.ActionLink("+ Registrar Gasto", "Create", null, new { @class = "btn btn-dark px-4 rounded-pill" })
    </div>

    <div class="row mb-5">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0 h-100 rounded-4" style="background-color: #1a1a1a; color: #ffffff;">
                <div class="card-body p-4 d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase mb-2" style="color: #aeb6bf; font-weight: 600; font-size: 0.8rem; letter-spacing: 0.5px;">
                        Gasto Total Acumulado
                    </h6>
                    <h2 class="mb-0 fw-bold" style="font-size: 2.8rem;">
                        $@(Model.Any() ? Model.Sum(item => item.Monto).ToString("0.00") : "0.00")
                    </h2>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-3">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body p-3">
                    <h6 class="text-uppercase mb-3 px-2 text-muted" style="font-weight: 600; font-size: 0.8rem;">
                        Distribución por Categoría
                    </h6>
                    @if (Model.Any())
                    {
                        <div style="height: 180px; width: 100%;">
                            <canvas id="graficaGastos"></canvas>
                        </div>
                    }
                    else
                    {
                        <div class="h-100 d-flex align-items-center justify-content-center text-muted" style="min-height: 180px;">
                            Agrega gastos para ver tus estadísticas
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light border-bottom">
                        <tr>
                            <th class="px-4 py-3" style="font-weight: 500; color: #888; text-transform: uppercase; font-size: 0.85rem;">Fecha</th>
                            <th class="px-4 py-3" style="font-weight: 500; color: #888; text-transform: uppercase; font-size: 0.85rem;">Concepto</th>
                            <th class="px-4 py-3" style="font-weight: 500; color: #888; text-transform: uppercase; font-size: 0.85rem;">Categoría</th>
                            <th class="px-4 py-3" style="font-weight: 500; color: #888; text-transform: uppercase; font-size: 0.85rem;">Monto</th>
                            <th class="px-4 py-3 text-end" style="font-weight: 500; color: #888; text-transform: uppercase; font-size: 0.85rem;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    No tienes gastos registrados aún. ¡Comienza agregando uno!
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3 align-middle text-muted">@item.FechaRegistro.ToShortDateString()</td>
                                    <td class="px-4 py-3 align-middle fw-medium" style="color: #333; font-size: 1.05rem;">@Html.DisplayFor(modelItem => item.Concepto)</td>
                                    <td class="px-4 py-3 align-middle text-secondary">@Html.DisplayFor(modelItem => item.Categorias.Nombre)</td>
                                    <td class="px-4 py-3 align-middle fw-bold text-dark">$@item.Monto.ToString("0.00")</td>
                                    <td class="px-4 py-3 align-middle text-end">
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-secondary me-1 rounded-pill px-3" })
                                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-secondary me-1 rounded-pill px-3" })
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger rounded-pill px-3" })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        var categorias = @labelsJson;
        var totales = @dataJson;

        if (categorias && categorias.length > 0) {
            var ctx = document.getElementById('graficaGastos').getContext('2d');

            var miGrafica = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: categorias,
                    datasets: [{
                        data: totales,
                        backgroundColor: [
                            '#3498db', '#1abc9c', '#9b59b6', '#f1c40f', '#e67e22',
                            '#e74c3c', '#34495e', '#95a5a6'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '75%',
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                usePointStyle: true,
                                padding: 20,
                                font: { family: "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif" }
                            }
                        }
                    }
                }
            });
        }
    </script>
}